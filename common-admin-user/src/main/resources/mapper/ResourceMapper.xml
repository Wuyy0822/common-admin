<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.panlingxiao.common_admin.mapper.user.ResourceMapper">

    <select id="listAllMenuResource" resultType="Resource" resultMap="resourceMap">
        select t_resource.id,t_resource.name,t_resource.type,t_resource.url,t_resource.available,t_resource.parent_id,t_resource.parent_ids
        from t_resource where parent_id != null and parent_id>=0 and t_resource.type = 'menu'
        order by level,position
    </select>

    <resultMap id="resourceMap" type="resource">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="url" column="available"/>
        <result property="parent_id" column="parent_id"/>
        <result property="parent_ids" column="parent_ids"/>
        <result property="level" column="level"/>
        <result property="position" column="position"/>
    </resultMap>


</mapper>